#include <stdio.h>
void main ()
{  char ch;
    int num=0,cnt=0,i,a;  
    printf("请输入想要显示的字符以及个数：");
    while(scanf("%c,%d",&ch,&num)) 
    {  
      for(i=1; i <= num; i++)  
      {   
        if(((2*(i*i)-1) > num))   
          break;     
        cnt = i;  
      }  
    for(i=0; i < cnt; i++) 
    {   
      for(a=0; a < i; a++)   
      {    
        printf(" ");   
      }   
      for(a=0; a < (2*(cnt - i)-1); a++)  
      {    
        printf("%c",ch);   
      }    
      printf("\n"); 
    }  
    for(i=1; i < cnt; i++)  
    {   
      for(a=cnt-1; a > i; a--)   
      {    
         printf(" ");  
      }   
      for(a=2*i+1; a > 0 ; a--)   
      {    
        printf("%c",ch);   
      }    
      printf("\n");  
    }   
    for(i=0; i < num-2*cnt*cnt+1; i++)  
    {   
      printf("%c",ch);  
    }   
      printf("\n"); 
    }
  }
